---
import { getTranslations } from '../i18n/translations';
import type { Lang } from '../i18n/config';

const { lang } = Astro.props;
const t = getTranslations(lang);
const base = import.meta.env.BASE_URL;
const year = new Date().getFullYear();
const copyright = t.footer.copyright.replace('[YEAR_PLACEHOLDER]', String(year));
---

<footer class="footer">
	<div class="inner">
		<nav class="links">
			<a href={base + lang + '/terms/'}>{t.footer.terms}</a>
			<a href={base + lang + '/privacy/'}>{t.footer.privacy}</a>
		</nav>
		<p class="copy">{copyright}</p>
	</div>
</footer>

<style>
	.footer {
		border-top: 1px solid #e5e5e5;
		background: #f9f9f9;
		margin-top: auto;
	}
	.inner {
		max-width: 960px;
		margin: 0 auto;
		padding: 1.25rem 1rem;
		text-align: center;
	}
	.links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		margin-bottom: 0.75rem;
	}
	.links a {
		color: #444;
		text-decoration: none;
		font-size: 0.9rem;
	}
	.links a:hover {
		text-decoration: underline;
	}
	.copy {
		margin: 0;
		font-size: 0.8rem;
		color: #666;
	}
</style>
